@using FYPfinalWEBAPP.Controllers;
@using FYPfinalWEBAPP.Models;
@model List 

<div class="container"></div>

<div class="my-3">
    <h2>Update Listing</h2>
</div>

<form method="post"
      asp-controller="Listing"
      asp-action="Update">

    <input asp-for="Id" hidden />
    <input asp-for="Picture" hidden />

    <div class="mb-3">
        <div class="col-md-5">
            <img id="ImgPhoto" src="~/images/@Model.Picture" style="height:350px;" />
        </div>
    </div>

    <div class="col-md-5 mb-3 form-floating">
        <input asp-for="FoodName" class="form-control" placeholder="Food Name" />
        <label asp-for="FoodName">Food Name</label>
        <div class="col-auto">
            <span asp-validation-for="FoodName" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-4 mb-3 form-floating">
        <input asp-for="Brand" class="form-control" placeholder="Brand" />
        <label asp-for="Brand">Brand</label>
        <div class="col-auto">
            <span asp-validation-for="Brand" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-3 mb-3 form-floating">
        <input asp-for="ExpiryDate" class="form-control" placeholder="ExpiryDate" />
        <label asp-for="ExpiryDate">Expiry Date</label>
        <div class="col-auto">
            <span asp-validation-for="ExpiryDate" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3 mb-3 form-floating">
            <input asp-for="Quantity" class="form-control"
                   placeholder="Quantity" />
            <label asp-for="Quantity" class="ps-4">Quantity</label>
            <div class="col-auto">
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-3 mb-3 form-floating">
            <input asp-for="Cost" class="form-control"
                   placeholder="Cost for one ($)" />
            <label asp-for="Cost" class="ps-4">Cost for one ($)</label>
            <div class="col-auto">
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-3 form-floating">
        <textarea asp-for="Description" class="form-control" style="height: 100px"
                  placeholder="Add description here"></textarea>
        <label asp-for="Description">Description</label>
        <div class="col-auto">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="mb-3">
            <button class="btn btn-primary" type="submit">Save</button>
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="col-6">
                <div class="alert alert-@ViewData["MsgType"]">
                    <b>Message: </b>@ViewData["Message"]<br />
                    @if (!String.IsNullOrEmpty(ViewData["ExecSQL"]?.ToString()))
                    {
                        <b>SQL: </b>

                        @ViewData["ExecSQL"]?.ToString()
                    }
                </div>
            </div>
        </div>
    }
</form>
